<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>NodeJs Learning | Home</title>
</head>
<link rel="stylesheet" href="./css/style.css">
<script src="./js/app.js"></script>
<body>
   <div class="main-content">
   {{>header}}
   <form id="form">
      <input placeholder="Location">
      <button id="submit">Search</button>
   </form>
   <div id="forecast">
         <table id="table">
            <tr>
               <th style="text-align: center; font-family:'Times New Roman', Times, serif ; font-size: 50px;" colspan="2">Forecast Data</th>
            </tr>
            <tr>
               <th>Property</th>
               <th>Weather Condition</th>
            </tr>
            <tr>
               <td>City</td>
               <td id="property1"></td>
            </tr>
            <tr>
               <td>State</td>
               <td id="property2"></td>
            </tr>
            <tr>
               <td>Country</td>
               <td id="property3"></td>
            </tr>
            <tr>
               <td>Population</td>
               <td id="property4"></td>
            </tr>
            <tr>
               <td>Timezone</td>
               <td id="property5"></td>
            </tr>
            <tr>
               <td>Latitude</td>
               <td id="property6"></td>
            </tr>
            <tr>
               <td>Longitude</td>
               <td id="property7"></td>
            </tr>
            <tr>
               <td>Type</td>
               <td id="property8"></td>
            </tr>
            <tr>
               <td>Weather</td>
               <td id="property9"></td>
            </tr>
            </table>
      </div>
   {{>footer}}
   </div>
</body>
</html>